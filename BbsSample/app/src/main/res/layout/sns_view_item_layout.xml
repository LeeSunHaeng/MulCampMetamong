<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/imageView4"/>
            <TextView
                    android:text="doselage"
                    android:layout_width="456dp"
                    android:layout_height="match_parent" android:id="@+id/textView5"
                    android:textSize="25dp"
                    android:gravity="center_vertical"
            />
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/setting_icon"
                    android:id="@+id/imageButton2" android:layout_weight="1"
                    android:padding="0sp"
                    android:scaleType="fitCenter"
                    android:backgroundTint="@color/white"
            />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

            <TextView
                    android:text="~~시간 전"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:id="@+id/textView9"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_vertical"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="385dp" app:srcCompat="@drawable/metamom_combine"
                android:id="@+id/imageView3"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

            <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/like_icon"
                    android:id="@+id/imageButton5"
                    android:padding="0sp"
                    android:scaleType="fitCenter"
                    android:backgroundTint="@color/white"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
            <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/comment_icon2"
                    android:id="@+id/imageButton7"
                    android:padding="0sp"
                    android:scaleType="fitCenter"
                    android:backgroundTint="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/imageButton5" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

            <TextView
                    android:text="좋아요 @개"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textView6"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_vertical"
            />
            <TextView
                    android:text="댓글 @@개"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" android:id="@+id/textView7"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="댓글 쓰기.."
                    android:ems="10"
                    android:id="@+id/editTextTextPersonName"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>