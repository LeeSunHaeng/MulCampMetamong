<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".subscribe.SubPurchaseActivity" android:id="@+id/subPurchase_layout">

    <!--<TextView
            android:id="@+id/subPurchase_tvSkuTxt"
            android:text="상품설명" android:textSize="15dp" android:textColor="@color/meta_green01"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.21" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="164dp"/>-->
    <Button
            android:id="@+id/subPurchase_purchaseBtn"
            android:text="결제" android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.922" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_explainTxt"
            app:layout_constraintVertical_bias="0.141"/>
    <TextView
            android:id="@+id/subPurchase_textView"
            android:text="상품결제" android:gravity="center_vertical" android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"
            app:layout_constraintHorizontal_bias="0.01" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:text="유형" android:gravity="center_vertical" android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/subPurchase_textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_textView" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.009" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:id="@+id/subPurchase_typeTxt"
            android:text="선택한 상품유형" android:gravity="center_vertical" android:textSize="15dp"
            android:textColor="@color/meta_green01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_textView2"
            app:layout_constraintHorizontal_bias="0.011" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:text="기간" android:gravity="center_vertical" android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/subPurchase_textView9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_typeTxt" android:layout_marginTop="55dp"
            app:layout_constraintHorizontal_bias="0.051"/>
    <TextView
            android:id="@+id/subPurchase_periodTxt"
            android:text="선택한 기간" android:gravity="center_vertical" android:textSize="15dp"
            android:textColor="@color/meta_green01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_textView9"
            app:layout_constraintHorizontal_bias="0.011" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:text="가격" android:gravity="center_vertical" android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/subPurchase_textView14"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_periodTxt" android:layout_marginTop="55dp"
            app:layout_constraintHorizontal_bias="0.054"/>
    <TextView
            android:id="@+id/subPurchase_costTxt"
            android:text="선택한 기간에 따른 가격" android:gravity="center_vertical" android:textSize="15dp" android:textColor="@color/meta_green01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_textView14"
            app:layout_constraintHorizontal_bias="0.067"/>
    <TextView
            android:text="시간" android:gravity="center_vertical" android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/subPurchase_textView16"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_costTxt" android:layout_marginTop="55dp"
            app:layout_constraintHorizontal_bias="0.013" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:id="@+id/subPurchase_timeTxt"
            android:text="선택한 시간" android:gravity="center_vertical" android:textSize="15dp"
            android:textColor="@color/meta_green01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_textView16"
            app:layout_constraintHorizontal_bias="0.014" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:id="@+id/subPurchase_explainTxt"
            android:text="상품설명" android:gravity="left" android:textSize="15dp"
            android:layout_width="500dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subPurchase_timeTxt" android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.307" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>