<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchId">
    <ImageView
            android:src="@drawable/metamom_splash_logo"
            android:layout_width="404dp"
            android:layout_height="155dp" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16"/>

    <EditText
            android:id="@+id/editName"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="이름"
            android:paddingStart="12dp"
            android:paddingTop="17.5dp"
            android:paddingBottom="17.5dp"
            android:layout_gravity="center"
            android:background="@drawable/login_input_box"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="72dp"
            android:layout_marginStart="96dp"/>

    <EditText
            android:id="@+id/editBirth"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:ems="10"
            android:paddingStart="12dp"
            android:paddingTop="17.5dp"
            android:paddingBottom="17.5dp"
            android:inputType="date"
            android:layout_gravity="center"
            android:background="@drawable/login_input_box"
            android:hint="생년월일 [8자리]"
            app:layout_constraintTop_toBottomOf="@+id/editName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" android:layout_marginTop="56dp"/>


    <Button
            android:id="@+id/searchIdBtn"
            android:layout_width="538dp"
            android:layout_height="67dp"
            android:paddingBottom="10dp"
            android:text="아이디 찾기"
            android:fontFamily="@font/font_content_bold"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/editBirth"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="92dp"
            android:layout_marginStart="32dp"/>

    <TextView
            android:id="@+id/resultText"
            android:layout_width="385dp"
            android:gravity="center"
            android:layout_height="116dp"
            app:layout_constraintTop_toBottomOf="@+id/searchIdBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginStart="108dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>