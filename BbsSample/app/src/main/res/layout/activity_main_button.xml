<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainButtonActivity">

    <!-- #21# [구독기능] 구독버튼 +  SubActivity와 연결 -->

    <!-- #21# [참고]연두색 테두리 적용을 위하여 edge.xml 파일 생성 -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/edge"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintVertical_bias="0.28">

        <!-- [추가 필요] background 화이트로 설정 + font 적용 -->
        <Button
                android:id="@+id/main_subBtn"
                android:background="#00ff0000"
                android:text="구독 신청" android:textColor="@color/black" android:gravity="center_vertical"
                android:layout_width="490dp" android:layout_height="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.014"
                android:layout_marginTop="4dp"/>
        <TextView
                android:id="@+id/main_sub_textView"
                android:text="    구독으로 편하게 맞춤 식단을 받아보세요 "
                android:gravity="center_vertical"
                android:layout_width="490dp"
                android:layout_height="45dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.002"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/main_subBtn"
                app:layout_constraintVertical_bias="0.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

        <Button
                android:id="@+id/SnsBtn"
                android:text="Sns이동"
                android:layout_width="160dp"
                android:layout_height="66dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:text="해빈버튼"
                android:layout_width="116dp"
                android:layout_height="67dp"
                android:id="@+id/haebinBtn"
                android:layout_gravity="center"/>

        <Button
                android:text="카카오로그아웃"
                android:layout_width="116dp"
                android:layout_height="67dp"
                android:id="@+id/kakaoLogoutBtn"
                android:layout_gravity="center"/>
        <Button
                android:text="레시피로 이동"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/recipeBtn"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>