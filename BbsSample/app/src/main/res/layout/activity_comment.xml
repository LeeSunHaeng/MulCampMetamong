<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sns.CommentActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="596dp"
            android:layout_height="706dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="144dp" android:id="@+id/cmtRecyclerView"/>
    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="598dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="0sp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/cmtInsertProfileImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
                android:layout_width="398dp"
                android:layout_height="100dp"
                android:inputType="textPersonName"
                android:hint="댓글 추가.."
                android:ems="10"
                android:id="@+id/cmtInsertContenteditText"
                app:layout_constraintStart_toEndOf="@+id/cmtInsertProfileImageView"
                app:layout_constraintEnd_toStartOf="@+id/cmtInsertimageButton" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"/>
        <ImageButton
                android:layout_width="100dp"
                style="@android:style/ButtonBar"
                android:padding="0sp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:layout_height="100dp"
                app:srcCompat="@drawable/icon_check"
                android:id="@+id/cmtInsertimageButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>