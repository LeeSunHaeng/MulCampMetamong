<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodListMeals.FoodListMealsUpdate">

    <TextView
            android:text="음식 점수"
            android:textSize="20sp"
            android:layout_width="87dp"
            android:layout_height="31dp" android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/albumImg3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="분류"
            android:textSize="20sp"
            android:layout_width="87dp"
            android:layout_height="31dp" android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="12dp"/>
    <Button
            android:id="@+id/updateListBtn"
            android:text="수정"
            android:layout_width="123dp"
            android:layout_height="98dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner3"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toEndOf="@+id/editMemoText3"
            android:layout_marginStart="16dp"/>
    <EditText
            android:id="@+id/editMemoText3"
            android:layout_width="382dp"
            android:layout_height="147dp"
            android:inputType="textMultiLine"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:hint="여기에 메모하세요"
            android:gravity="top"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="메모 , 다짐"
            android:textSize="20sp"
            android:layout_width="152dp"
            android:layout_height="31dp" android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/spinner3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="12dp"/>
    <TextView
            android:id="@+id/selectKind3"
            android:text="언제 식사 하셧나요 ?"
            android:textSize="20sp"
            android:layout_width="316dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            android:layout_marginTop="12dp" android:layout_marginStart="12dp"/>
    <TextView
            android:id="@+id/scoreText3"
            android:text="내가생각한 점수는 ?!"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="181dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toEndOf="@+id/radioGroup"
            app:layout_constraintTop_toBottomOf="@+id/albumImg3"
            android:layout_marginTop="52dp"
            android:layout_marginStart="44dp"/>
    <Spinner
            android:id="@+id/spinner3"
            android:layout_width="510dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            tools:ignore="TouchTargetSizeCheck"/>
    <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp">
        <RadioButton
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/point1"/>
        <RadioButton
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/point2"/>
        <RadioButton
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/point3"/>
        <RadioButton
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/point4"/>
        <RadioButton
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/point5"/>
    </RadioGroup>
    <ImageView
            android:id="@+id/albumImg3"
            android:layout_width="350dp"
            android:layout_height="360dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.156"
            app:layout_constraintHorizontal_bias="0.536"/>
    <ImageButton
            android:id="@+id/cameraBtn3"
            android:layout_width="66dp"
            android:layout_height="54dp"
            app:srcCompat="@drawable/cameraicon"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
            app:layout_constraintBottom_toTopOf="@+id/albumImg3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="348dp"
            android:layout_marginBottom="8dp"/>
    <ImageButton
            android:id="@+id/albumBtn3"
            android:layout_width="62dp"
            android:layout_height="54dp"
            app:srcCompat="@drawable/photoicon"
            app:layout_constraintStart_toEndOf="@+id/cameraBtn3"
            app:layout_constraintBottom_toTopOf="@+id/albumImg3"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" tools:ignore="SpeakableTextPresentCheck"/>
</androidx.constraintlayout.widget.ConstraintLayout>