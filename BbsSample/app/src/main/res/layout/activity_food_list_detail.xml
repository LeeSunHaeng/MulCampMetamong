<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodListMeals.FoodListDetail">

    <ImageView
            android:layout_width="512dp"
            android:layout_height="337dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.235" app:layout_constraintHorizontal_bias="0.545"/>
    <TextView
            android:id="@+id/kindTxt"
            android:textSize="25sp"
            android:gravity="left"
            android:layout_width="124dp"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="24dp" android:layout_marginStart="48dp"/>
    <TextView
            android:id="@+id/dateTxt"
            android:textSize="25sp"
            android:gravity="left"
            android:layout_width="195dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toBottomOf="@+id/kindTxt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" android:layout_marginStart="48dp"/>
    <TextView
            android:id="@+id/scoreTxt"
            android:textSize="25sp"
            android:gravity="left"
            android:layout_width="449dp"
            android:layout_height="41dp"
            app:layout_constraintTop_toBottomOf="@+id/dateTxt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_marginTop="16dp"/>
    <TextView
            android:id="@+id/memoTxt2"
            android:textSize="25sp"
            android:gravity="left"
            android:layout_width="449dp"
            android:layout_height="218dp"
            app:layout_constraintTop_toBottomOf="@+id/scoreTxt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="48dp"/>
    <TextView
            android:textSize="40sp"
            android:gravity="left"
            android:text="내가 뭘 먹었더라 ?"
            android:layout_width="478dp"
            android:layout_height="61dp" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" android:layout_marginStart="48dp"/>
    <Button
            android:text="삭제"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/delBtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="388dp"/>
    <Button
            android:text="수정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/updateBtn"
            app:layout_constraintStart_toEndOf="@+id/delBtn" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>