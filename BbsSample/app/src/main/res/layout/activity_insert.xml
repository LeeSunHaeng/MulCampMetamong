<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".InsertActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarInsertMember"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:titleTextAppearance="@style/TitleBarTextAppearance"
            android:background="@color/white"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/metamom_splash_logo"
            android:layout_gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/idInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxBackgroundColor="@color/meta_grey05"
            app:hintTextColor="@color/meta_grey03"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/idInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디"
                android:inputType="text"
                android:fontFamily="@font/font_content_regular"
                android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pwdInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxBackgroundColor="@color/meta_grey05"
            app:hintTextColor="@color/meta_grey03"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pwdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:inputType="text"
                android:fontFamily="@font/font_content_regular"
                android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pwdInputBoxCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxBackgroundColor="@color/meta_grey05"
            app:hintTextColor="@color/meta_grey03"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pwdInputCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호 확인"
                android:fontFamily="@font/font_content_regular"
                android:inputType="text"
                android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxBackgroundColor="@color/meta_grey05"
            app:hintTextColor="@color/meta_grey03"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/emailInputCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이메일"
                android:fontFamily="@font/font_content_regular"
                android:inputType="text"
                android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneNumberInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxBackgroundColor="@color/meta_grey05"
            app:hintTextColor="@color/meta_grey03"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="전화번호"
                android:fontFamily="@font/font_content_regular"
                android:inputType="text"
                android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/heightInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxBackgroundColor="@color/meta_grey05"
            app:hintTextColor="@color/meta_grey03"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/heightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="키"
                android:fontFamily="@font/font_content_regular"
                android:inputType="text"
                android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/weightInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxBackgroundColor="@color/meta_grey05"
            app:hintTextColor="@color/meta_grey03"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/weightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="몸무게"
                android:fontFamily="@font/font_content_regular"
                android:inputType="text"
                android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/birthInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxBackgroundColor="@color/meta_grey05"
            app:hintTextColor="@color/meta_grey03"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/birthInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="생년월일(6자리로 입력해주세요)"
                android:fontFamily="@font/font_content_regular"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

        <RadioButton
                android:text="남"
                android:textSize="14sp"
                android:buttonTint="@color/meta_purple01"
                android:fontFamily="@font/font_content_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <RadioButton
                android:text="여"
                android:textSize="14sp"
                android:buttonTint="@color/meta_purple01"
                android:fontFamily="@font/font_content_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"/>
    </RadioGroup>

    <Button
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="회원가입"
            android:fontFamily="@font/font_content_bold"
            android:textSize="16sp"/>



</LinearLayout>