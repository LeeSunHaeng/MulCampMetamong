<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KcalBMI.BmiMain">

    <TextView
            android:id="@+id/BmiTxt1"
            android:text="비만도(BMI)계산"
            android:fontFamily="@font/font_subtitle"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_width="301dp"
            android:layout_height="76dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:id="@+id/BmiTxt2"
            android:text="키"
            android:fontFamily="@font/font_content_regular"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.175"
            app:layout_constraintTop_toBottomOf="@+id/BmiTxt1" android:layout_marginTop="32dp"/>
    <EditText
            android:id="@+id/BmiHeight"
            android:layout_width="263dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:hint="키를 입력하세요"
            android:fontFamily="@font/font_content_regular"
            android:textSize="25dp"
            android:gravity="center"
            android:ems="10"
            app:layout_constraintStart_toEndOf="@+id/BmiTxt2"
            app:layout_constraintTop_toTopOf="@+id/BmiTxt2"
            android:layout_marginStart="56dp"/>


    <TextView
            android:id="@+id/BmiTxt3"
            android:text="몸무게"
            android:fontFamily="@font/font_content_regular"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.175"
            app:layout_constraintTop_toBottomOf="@+id/BmiTxt2"
            :layout_marginTop="20dp"
            android:layout_marginTop="32dp"/>

    <EditText
            android:id="@+id/BmiWeight"
            android:layout_width="263dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:hint="몸무게를 입력하세요"
            android:fontFamily="@font/font_content_regular"
            android:textSize="25dp"
            android:gravity="center"
            android:ems="10"
            app:layout_constraintTop_toTopOf="@+id/BmiTxt3"
            app:layout_constraintStart_toStartOf="@+id/BmiHeight"/>

    <TextView
            android:id="@+id/BmiResult"
            android:textSize="25dp"
            android:fontFamily="@font/font_content_regular"
            android:gravity="center"
            android:layout_width="500dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BmiBtn"
            android:layout_marginTop="24dp"/>

    <Button
            android:id="@+id/BmiBtn"
            android:text="계산하기"
            android:fontFamily="@font/font_content_regular"
            android:textSize="25dp"
            android:layout_width="147dp"
            android:layout_height="63dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BmiWeight"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.501"/>

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bmi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BmiResult"
            android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>