<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/reciBotImage"
            android:layout_width="220dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.271" android:layout_marginStart="24dp"/>
    <TextView
            android:id="@+id/reciBotTitle"
            android:text="요리 이름"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_width="287dp"
            android:layout_height="89dp"
            app:layout_constraintBottom_toTopOf="@+id/reciBotContent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.94"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/reciBotImage"
            app:layout_constraintHorizontal_bias="0.296"/>
    <TextView
            android:id="@+id/reciBotContent"
            android:text="나왔따!!!!!"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.361"
            app:behavior_peekHeight="500dp"
            app:layout_constraintStart_toEndOf="@+id/reciBotImage" app:layout_constraintHorizontal_bias="0.142"/>
    <Button
            android:id="@+id/reciBotBtn"
            android:text="레시피 보기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reciBotImage"
            app:layout_constraintHorizontal_bias="0.499"/>

</androidx.constraintlayout.widget.ConstraintLayout>