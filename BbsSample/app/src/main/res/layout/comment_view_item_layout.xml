<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp">

    <TextView
            android:id="@+id/cmtContentTxt"
            android:layout_width="398dp"
            android:layout_height="86dp"
            android:textSize="20sp"
            tools:text="내용"
            app:layout_constraintTop_toBottomOf="@+id/cmtNickNameTxt"
            app:layout_constraintStart_toEndOf="@+id/cmtProfileimageView" android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:id="@+id/cmtNickNameTxt"
            android:layout_width="221dp"
            android:layout_height="34dp"
            android:textSize="17sp"
            tools:text="작성자"
            app:layout_constraintStart_toEndOf="@+id/cmtProfileimageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="12dp"/>
    <TextView
            android:text="시간"
            android:layout_width="64dp"
            android:layout_height="38dp" android:id="@+id/cmtWriteTimeTxt"
            app:layout_constraintTop_toTopOf="@+id/cmtNickNameTxt"
            app:layout_constraintStart_toEndOf="@+id/cmtNickNameTxt"
            android:layout_marginStart="216dp" android:layout_marginTop="96dp"/>
    <ImageView
            android:layout_width="68dp"
            android:layout_height="72dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/cmtProfileimageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="38dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/delete_button"
            android:id="@+id/commentDelBtn"
            android:padding="0sp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>