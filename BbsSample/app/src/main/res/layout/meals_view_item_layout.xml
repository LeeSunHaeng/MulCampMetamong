<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="5dp">

    <ImageView
            android:layout_width="214dp"
            android:layout_height="163dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.533"/>
    <TextView
            android:text="평점 : "
            android:textSize="20sp"
            android:layout_width="124dp"
            android:layout_height="29dp" android:id="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="40dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="시간 : "
            android:textSize="20sp"
            android:layout_width="122dp"
            android:layout_height="25dp" android:id="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/imageView" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="24dp" android:layout_marginStart="40dp"/>
    <TextView
            android:text="분류 : "
            android:textSize="20sp"
            android:layout_width="125dp"
            android:layout_height="26dp" android:id="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="40dp"/>
    <TextView
            android:text="메모 : "
            android:textSize="20sp"
            android:layout_width="164dp"
            android:layout_height="143dp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/memoText"/>
</androidx.constraintlayout.widget.ConstraintLayout>