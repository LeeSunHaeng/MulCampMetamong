<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sns.SnsInsertActivity">

    <ImageView
            android:layout_width="525dp"
            android:layout_height="348dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/avatars"
            app:layout_constraintStart_toStartOf="@+id/camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/camera"
            app:layout_constraintVertical_bias="0.149"/>
    <Button
            android:text="카메라"
            android:layout_width="155dp"
            android:layout_height="58dp"
            android:id="@+id/camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintVertical_bias="0.034"/>
    <Button
            android:text="사진"
            android:layout_width="155dp"
            android:layout_height="58dp"
            android:id="@+id/picture"
            app:layout_constraintStart_toEndOf="@+id/camera"
            android:layout_marginStart="36dp"
            app:layout_constraintTop_toTopOf="@+id/camera"
            app:layout_constraintBottom_toBottomOf="@+id/camera"
            app:layout_constraintVertical_bias="0.034"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:text="문구 입력..."
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toBottomOf="@+id/avatars" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.492" app:layout_constraintVertical_bias="0.24"/>
    <ImageButton
            android:src="@drawable/icon_check"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/snsInsertCheckBtn"
            android:padding="0sp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/picture" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/avatars"
            app:layout_constraintHorizontal_bias="0.503" app:layout_constraintVertical_bias="0.284"/>
    <TextView
            android:text="TextView"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:id="@+id/uriTextView"
            android:gravity="center_vertical"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
            app:layout_constraintVertical_bias="0.229"/>

</androidx.constraintlayout.widget.ConstraintLayout>