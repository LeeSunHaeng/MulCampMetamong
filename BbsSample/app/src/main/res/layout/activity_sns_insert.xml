<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sns.SnsInsertActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="end"
            android:orientation="horizontal">

        <ImageButton
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_camera"/>
        <ImageButton
                android:id="@+id/picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_image"/>

    </LinearLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="348dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/avatars"/>

    <EditText
            android:id="@+id/snsContentEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@null"
            android:fontFamily="@font/font_content_regular"
            android:textSize="14sp"
            android:textColor="@color/meta_grey01"
            android:inputType="textPersonName"
            android:hint="문구를 입력해주세요"
            android:ems="10"/>

    <Button
            android:id="@+id/snsInsertCheckBtn"
            android:src="@drawable/icon_check"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingBottom="10dp"
            android:background="@drawable/btn_shadow"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/font_content_bold"
            android:textSize="14sp"
            android:textColor="@color/meta_white"

            android:text="게시하기"/>

    <TextView
            android:text="TextView"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:id="@+id/uriTextView"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:visibility="invisible"/>

</LinearLayout>