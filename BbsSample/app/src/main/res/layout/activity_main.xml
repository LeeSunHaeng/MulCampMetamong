<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="115dp"
            android:text="건강하게"
            android:textSize="50dp"
            android:fontFamily="@font/font_title"
            android:textColor="@color/meta_green01"
            android:letterSpacing="-0.025"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:paddingTop="0dp"
            android:text="먹어보자"
            android:textSize="50dp"
            android:fontFamily="@font/font_title"
            android:textColor="@color/meta_purple01"
            android:letterSpacing="-0.025"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <EditText
            android:id="@+id/editId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="40dp"
            android:paddingStart="12dp"
            android:paddingTop="17.5dp"
            android:paddingBottom="17.5dp"
            android:inputType="text"
            android:layout_gravity="center"
            android:background="@color/meta_grey05"
            android:hint="아이디를 입력해주세요"
            android:fontFamily="@font/font_content_regular"
            android:textSize="16sp"
            android:textColorHint="@color/meta_grey03"/>
    <EditText
            android:id="@+id/editPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:paddingStart="12dp"
            android:paddingTop="17.5dp"
            android:paddingBottom="17.5dp"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:background="@color/meta_grey05"
            android:hint="비밀번호를 입력해주세요"
            android:fontFamily="@font/font_content_regular"
            android:textSize="16sp"
            android:textColorHint="@color/meta_grey03"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:text="아이디 저장"
                android:textSize="14sp"
                android:buttonTint="@color/meta_purple01"
                android:fontFamily="@font/font_content_regular"/>

    </RadioGroup>

    <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="로그인"
            android:fontFamily="@font/font_content_bold"
            android:textSize="16sp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구글 로그인"
                android:textSize="14sp"
                android:fontFamily="@font/font_content_regular"
                android:textColor="@color/meta_grey01"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="아직 회원이 아닌가요?"
                android:textSize="12sp"
                android:textColor="@color/meta_grey02"
                app:layout_constraintEnd_toStartOf="@id/insertMemberBtn"
                app:layout_constraintTop_toTopOf="@id/insertMemberBtn"/>

        <TextView
                android:id="@+id/insertMemberBtn"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/meta_grey01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="회원가입" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_btn_small_move"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/insertMemberBtn"
                app:layout_constraintStart_toEndOf="@id/insertMemberBtn"
                app:layout_constraintTop_toTopOf="@id/insertMemberBtn"/>
    </LinearLayout>

    <Button
            android:id="@+id/SnsBtn"
            android:text="Sns이동"
            android:layout_width="160dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="해빈버튼"
            android:layout_width="116dp"
            android:layout_height="67dp"
            android:id="@+id/haebinBtn"
            android:layout_gravity="center"/>

</LinearLayout>
