<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="382dp"
            android:layout_height="63dp"
            android:text="건강하게"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="382dp"
            android:layout_height="63dp"
            android:text="건강하게"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:id="@+id/editId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"/>
    <EditText
            android:id="@+id/editPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"/>
    <Button
            android:id="@+id/loginBtn"
            android:text="login"
            android:layout_width="160dp"
            android:layout_height="66dp"
            app:layout_constraintTop_toBottomOf="@+id/editPw"
            android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="344dp"/>

    <Button
            android:text="해빈버튼"
            android:layout_width="116dp"
            android:layout_height="67dp" android:id="@+id/haebinBtn"
            app:layout_constraintTop_toBottomOf="@+id/loginBtn"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="336dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="아직 회원이 아닌가요?"
                android:textSize="12sp"
                android:textColor="@color/meta_grey02"
                app:layout_constraintEnd_toStartOf="@id/insertMemberBtn"
                app:layout_constraintTop_toTopOf="@id/insertMemberBtn"/>

        <TextView
                android:id="@+id/insertMemberBtn"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/meta_grey01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="회원가입" />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_btn_small_move"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/insertMemberBtn"
                app:layout_constraintStart_toEndOf="@id/insertMemberBtn"
                app:layout_constraintTop_toTopOf="@id/insertMemberBtn"/>
    </LinearLayout>

    <Button
            android:id="@+id/SnsBtn"
            android:text="Sns이동"
            android:layout_width="160dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="해빈버튼"
            android:layout_width="116dp"
            android:layout_height="67dp"
            android:id="@+id/haebinBtn"
            android:layout_gravity="center"/>

</LinearLayout>
