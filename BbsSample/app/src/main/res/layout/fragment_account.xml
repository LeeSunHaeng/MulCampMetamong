<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
            android:layout_width="match_parent"
                 android:layout_height="match_parent"
            tools:context=".fragments.AccountFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout5" android:id="@+id/linearLayout7">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/nav_top"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="5"
                    android:background="@color/meta_white"
                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout5">

                <ImageView
                        android:id="@+id/mealTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_meal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/recipeTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_recipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/homeTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/talkTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_talk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/accountTap"
                        android:layout_weight="1"
                        android:src="@drawable/btn_nav_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                    android:id="@+id/myPageFrag_textView"
                    android:text="마이페이지" android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.01"
                    android:layout_marginStart="24dp"/>
            <ScrollView
                    android:layout_width="500dp"
                    android:layout_height="600dp"
                    app:layout_constraintTop_toBottomOf="@+id/myPageFrag_textView"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
                    app:layout_constraintVertical_bias="0.0" android:id="@+id/myPageFrag_scrollView">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="vertical">
                    <TextView
                            android:id="@+id/myPageFrag_textView17"
                            android:text="ID" android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/myPageFrag_idTxt"
                            android:text="회원의 ID값" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/myPageFrag_textView19"
                            android:text="닉네임" android:textSize="20dp" android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/myPageFrag_nicknameTxt"
                            android:text="회원의 Nickname" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/myPageFrag_textView22"
                            android:text="이름" android:textSize="20dp" android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/myPageFrag_nameTxt"
                            android:text="회원의 Name값" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/myPageFrag_textView24"
                            android:text="EMAIL" android:textSize="20dp" android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/myPageFrag_emailTxt"
                            android:text="회원의 EMAIL값" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/myPageFrag_textView26"
                            android:text="PHONE" android:textSize="20dp" android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/myPageFrag_phoneTxt"
                            android:text="회원의 PHONE값" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/myPageFrag_textView28"
                            android:text="키" android:textSize="20dp" android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/myPageFrag_heightTxt"
                            android:text="회원의 HEIGHT값" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/myPageFrag_textView30"
                            android:text="몸무게" android:textSize="20dp" android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/myPageFrag_weightTxt"
                            android:text="회원의 WEIGHT값" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/myPageFrag_textView10"
                            android:text="생년월일" android:textSize="20dp" android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    <TextView
                            android:id="@+id/myPageFrag_birthTxt"
                            android:text="회원의 생년월일값" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/myPageFrag_textView32"
                            android:text="성별" android:textSize="20dp" android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/myPageFrag_genderTxt"
                            android:text="회원의 GENDER값" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/myPageFrag_textView34"
                            android:text="구독 여부" android:textSize="20dp" android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/myPageFrag_subTxt"
                            android:text="회원의 SUBSCRIBE값" android:textSize="15dp" android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:background="@color/meta_grey04"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                </LinearLayout>
            </ScrollView>
            <Button
                    android:id="@+id/myPageFrag_updateBtn"
                    android:text="회원정보 수정"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                    app:layout_constraintHorizontal_bias="0.895" app:layout_constraintVertical_bias="0.932"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>