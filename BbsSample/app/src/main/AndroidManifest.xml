<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.metamom.bbssample">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/> <!-- 저장소에 접근할 수 있게 하는 설정 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> <!-- 저장소에 접근할 수 있게 하는 설정 -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_metamom"
            android:label="@string/app_name"
            android:requestLegacyExternalStorage="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.BbsSample"
            android:usesCleartextTraffic="true">
        <activity
                android:name="com.metamom.bbssample.subscribe.SubInfoActivity"
                android:exported="true"/>
        <activity
                android:name="com.metamom.bbssample.subscribe.SubAddActivity"
                android:exported="true"/>
        <activity
                android:name="com.metamom.bbssample.InsertActivity"
                android:exported="true"/>
        <activity
                android:name="com.metamom.bbssample.SnsActivity"
                android:exported="true"/>
        <!-- 저장소에 접근할 수 있게 하는 설정 -->
        <activity
                android:name="com.metamom.bbssample.MainButtonActivity"
                android:exported="true"/> <!-- 저장소에 접근할 수 있게 하는 설정 -->
        <activity
                android:name="com.metamom.bbssample.addFoodList"
                android:exported="true"/>
        <activity
                android:name="com.metamom.bbssample.Food_List_Meals"
                android:exported="true"/>

        <activity
                android:name="com.metamom.bbssample.MainActivity"
                android:exported="true"/>
        <activity
                android:name="com.metamom.bbssample.SplashActivity"
                android:exported="true"
                android:theme="@style/Theme.BbsSample.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>